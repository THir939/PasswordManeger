{
  "name": "passwordmaneger-desktop",
  "version": "0.1.0",
  "description": "PasswordManeger native desktop app",
  "author": "TH",
  "private": true,
  "type": "module",
  "main": "src/main.js",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "dist": "electron-builder --publish never",
    "dist:mac": "electron-builder --mac --arm64 --publish never",
    "dist:win": "electron-builder --win --x64 --publish never",
    "dist:win:arm64": "electron-builder --win --arm64 --publish never"
  },
  "devDependencies": {
    "electron": "^32.2.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.antigravity.passwordmaneger",
    "productName": "PasswordManeger",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
