{
  "manifest_version": 3,
  "name": "PasswordManeger",
  "description": "Encrypted password manager extension with autofill and security audit.",
  "version": "0.1.0",
  "action": {
    "default_title": "PasswordManeger",
    "default_popup": "src/popup/popup.html"
  },
  "options_page": "src/options/options.html",
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/lib/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
